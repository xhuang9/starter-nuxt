{% macro teaser(data) %}
  <article class="py-6">
    <h2 class="text-4xl font-bold"><a href="{{ data.url }}" class="text-red-600 hover:undeline focus:underline cursor-pointer">{{ data.title }}</a></h2>
    <p>{{ data.pageSubheading }}</p>
    <p>
      <time class="text-sm" datetime="{{ data.postDate|atom }}">{{ data.postDate|date }}</time>
    </p>
  </article>
{% endmacro %}
